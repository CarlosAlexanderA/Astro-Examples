---
import AuthLayout from '@/layouts/AuthLayout.astro';
---

<AuthLayout title="login">
  <section
    class="bg-deep-black flex flex-col gap-10 text-white px-28 py-20 rounded-xl justify-center items-center"
  >
    <h1 class="text-white text-5xl font-semibold">Iniciar sesión en Spotify</h1>
    <ul class="flex flex-col w-[324px] gap-2">
      <li>
        <button
          class="flex gap-8 border border-medium-gray rounded-full w-full px-8 py-2 hover:border-white"
        >
          <img
            src="https://accounts.scdn.co/sso/images/new-google-icon.72fd940a229bc94cf9484a3320b3dccb.svg"
            class="w-6 h-6"
          />
          <span>Continuar con Gooble</span></button
        >
      </li>
      <li>
        <button
          class="flex gap-8 border border-medium-gray rounded-full w-full px-8 py-2 hover:border-white"
        >
          <img
            src="https://accounts.scdn.co/sso/images/new-google-icon.72fd940a229bc94cf9484a3320b3dccb.svg"
            class="w-6 h-6"
          />
          <span>Continuar con Facebook</span></button
        >
      </li>
      <li>
        <button
          class="flex gap-8 border border-medium-gray rounded-full w-full px-8 py-2 hover:border-white"
        >
          <img
            src="https://accounts.scdn.co/sso/images/new-google-icon.72fd940a229bc94cf9484a3320b3dccb.svg"
            class="w-6 h-6"
          />
          <span>Continuar con Apple</span></button
        >
      </li>
      <li>
        <button
          class="flex gap-8 border border-medium-gray rounded-full w-full px-8 py-2 hover:border-white"
        >
          <span>Continuar con número de teléfono</span></button
        >
      </li>
    </ul>
    <hr
      class="my-2 h-[1px] border-t-0 bg-neutral-100/30 opacity-100 dark:opacity-50 w-full"
    />

    <h1>gello</h1>
  </section>
</AuthLayout>
