---
import ArrowLeft from '../icons/ArrowLeft.astro';
import ArrowRight from '../icons/ArrowRight.astro';
import Layout from '../layouts/Layout.astro';
import Play from '../icons/Play.astro';
---

<Layout title="Welcome to Astro.">
  <header class="bg-deep-black px-6 py-3 sticky top-0">
    <nav class="text-neutral-gray flex items-center justify-between">
      <div>
        <button class="bg-black/70 p-3 rounded-full"><ArrowLeft /></button>
        <button class="bg-black/70 p-3 rounded-full"><ArrowRight /></button>
      </div>
      <div class="flex gap-1">
        <button
          class="font-bold hover:text-white px-6 py-3 hover:scale-105 transition-all"
          >Registrate</button
        >
        <button
          class="bg-white text-deep-black font-bold rounded-full px-6 py-3 hover:scale-105 transition-transform"
          >Iniciar sessi√≥n</button
        >
      </div>
    </nav>
  </header>
  <section class="px-6 py-4 flex-1 bg-deep-black">
    <header class="flex justify-between items-center">
      <h2 class="text-3xl font-bold text-neutral-50">Playlists de Spotify</h2>
      <a class="text-medium-gray font-bold hover:underline" href="#"
        >Mostar todo</a
      >
    </header>
    <!-- #535353 -->

    <section class="cards-playlist">
      <div class="relative group">
        <div
          class="p-4 rounded-md bg-ebony-black hover:bg-dark-gray text-white flex flex-col gap-3"
        >
          <img
            src="https://i.scdn.co/image/ab67706f00000002b55b6074da1d43715fc16d6d"
            alt="Happy hits"
            class="w-full rounded-md"
          />
          <div class="flex flex-col gap-1">
            <h4 class="text-lg font-semibold">Happy Hits!</h4>
            <p class="text-sm text-light-gray">
              Hits to boost your mood and fill you with music is like a life
            </p>
          </div>
        </div>
        <button
          class="absolute rounded-full bg-green-primary p-3 text-black hover:scale-105 group-hover:opacity-100 bottom-0 group-hover:-translate-y-7 transition-all duration-150"
        >
          <Play />
        </button>
      </div>
      <div class="p-4 bg-ebony-black hover:bg-dark-gray">
        <picture>
          <img
            src="https://i.scdn.co/image/ab67706f00000002b55b6074da1d43715fc16d6d"
            alt="Happy hits"
          />
        </picture>
        <div>
          <h4>Happy Hits!</h4>
          <p>Hits to boost your mood and fill you with music is like a life</p>
        </div>
      </div>
      <div class="p-4 bg-ebony-black hover:bg-dark-gray">
        <picture>
          <img
            src="https://i.scdn.co/image/ab67706f00000002b55b6074da1d43715fc16d6d"
            alt="Happy hits"
          />
        </picture>
        <div>
          <h4>Happy Hits!</h4>
          <p>Hits to boost your mood and fill you with music is like a life</p>
        </div>
      </div>
      <div class="p-4 bg-ebony-black hover:bg-dark-gray">
        <picture>
          <img
            src="https://i.scdn.co/image/ab67706f00000002b55b6074da1d43715fc16d6d"
            alt="Happy hits"
          />
        </picture>
        <div>
          <h4>Happy Hits!</h4>
          <p>Hits to boost your mood and fill you with music is like a life</p>
        </div>
      </div>
    </section>
  </section>
</Layout>

bg-gradient-to-t from-pink-500 via-red-500 to-yellow-500
<style>
  .cards-playlist {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    grid-row: 1;
    gap: 1rem;
  }
</style>
