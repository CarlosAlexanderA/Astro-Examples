---
import Play from '@/icons/Play.astro';

interface Props {
  imgUrl: string;
  title: string;
  description: string;
}

const {imgUrl, title, description} = Astro.props;
---

<div
  class="relative group p-4 rounded-md bg-ebony-black hover:bg-dark-gray text-white flex flex-col gap-3"
>
  <img src={imgUrl} alt="card Big" class="w-full rounded-md" />
  <div class="flex flex-col gap-1">
    <h4 class="text-lg font-semibold truncate">
      {title}
    </h4>
    <p class="text-sm text-light-gray truncate">
      {description}
    </p>
  </div>
  <button
    class="absolute rounded-full bg-green-primary p-3 text-black hover:scale-105 opacity-0 group-hover:opacity-100 bottom-1/3 right-[10%] group-hover:-translate-y-7 transition-all duration-300n"
  >
    <Play />
  </button>
</div>
