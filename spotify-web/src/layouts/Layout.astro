---
import AsideMenuOut from '../components/AsideMenuOut.astro';

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="bg-black w-screen h-screen px-3 py-2 gap-2.5">
      <aside
        class="text-white [grid-area:aside] overflow-hidden bg-yellow-500 rounded-md"
      >
        <AsideMenuOut />
      </aside>
      <main class="[grid-area:main] bg-slate-800 rounded-md overflow-y-scroll">
        <slot />
      </main>
      <footer class="[grid-area:footer] h-10 bg-blue-400">
        <h3 class="text-white">Footer</h3>
      </footer>
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  #app {
    display: grid;
    grid-template-areas: 'aside main main' 'footer footer footer';
    grid-template-columns: 350px 1fr;
    grid-template-rows: 1fr auto;
  }
</style>
